{
    "name": "qiwi/bill-payments-php-sdk",
    "type": "library",
    "version": "0.0.2",
    "description": "Universal payments API SDK",
    "license": "MIT",
    "homepage": "https://github.com/QIWI-API/bill-payments-php-sdk",
    "support": {
        "issues": "https://github.com/QIWI-API/bill-payments-php-sdk/issues"
    },
    "require": {
        "php": ">=5.5.0",
        "ext-curl": "*",
        "ext-json": "*",
        "curl/curl": "^1.9",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.36",
        "phpdocumentor/phpdocumentor": "*"
    },
	"autoload": {
        "psr-4": {
            "Qiwi\\Api\\": "src/"
        }
	},
	"autoload-dev": {
		"psr-4": {
            "Qiwi\\Api\\": "tests/"
        }
	},
    "scripts": {
        "test": "phpunit --verbose",
        "docs": "phpdoc run --verbose"
    }
}
